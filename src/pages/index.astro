---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <main class="container mx-auto">
    <!-- Navigator component -->
    <section>
      <header class="py-6 px-10 flex items-center container justify-between">
        <div><p class="font-bold">Hola!</p></div>
        <nav>
          <ul
            class="flex [&>li>a]:font-medium [&>li>a]:inline-block [&>li>a]:px-4 [&>li>a]:py-2"
          >
            <li><a href="#">Work</a></li>
            <li><a href="#">Services</a></li>
            <li><a href="#">About</a></li>
            <li><a href="#">Contact</a></li>
          </ul>
        </nav>
      </header>
    </section>
    <!-- End Navigator Component -->

    <!-- Presentation Component -->
    <section class="py-28 flex flex-col items-center mx-auto max-w-7xl gap-10">
      <article class="flex flex-col gap-10 self-stretch">
        <h2 class="text-xl font-medium text-center">
          Hey there, Iâ€™m Camilo HernÃ¡ndez ðŸ‘‹
        </h2>
        <h1 class="text-7xl leading-normal font-semibold text-center">
          Developing digital products, services and experience.
        </h1>
      </article>
      <article class="flex justify-center items-start gap-3.5">
        <a href="#">
          <img src="/images/icon-instagram.svg" alt="camilohreina" />
        </a>
        <a href="#">
          <img src="/images/icon-gitlab.svg" alt="juan_c.hernandez_r" />
        </a>
        <a href="#">
          <img src="/images/icon-github.svg" alt="camilohreina" />
        </a>
        <a href="#">
          <img src="/images/icon-linkedin.svg" alt="camilohreina" />
        </a>
        <a href="#">
          <img src="/images/icon-twitter.svg" alt="camilohreina" />
        </a>
      </article>
    </section>
    <!-- End Presentation Component -->

    <!-- Stack Component -->
    <section class="flex flex-col items-center mx-auto max-w-7xl gap-10">
      <div class="separator">
        <span class="text">STACK</span>
      </div>
      <article
        class="flex scale-75 justify-center items-center gap-8 self-stretch"
      >
        <img src="/images/js.svg" alt="JavaScript" />
        <img src="/images/typescript.svg" alt="TypeScript" />
        <img src="/images/vue.svg" alt="VueJs" />
        <img src="/images/react.svg" alt="ReactJs" />
        <img src="/images/nodejs.svg" alt="NodeJS" />
        <img src="/images/python.svg" alt="Python" />
        <img src="/images/aws.svg" alt="AWS" />
        <img src="/images/linux.svg" alt="Linux" />
        <img src="/images/docker.svg" alt="Docker" />
        <img src="/images/mysql.svg" alt="MySQL" />
        <img src="/images/mongodb.svg" alt="MongoDB" />
        <img src="/images/git.svg" alt="Git" />
      </article>
      <div class="separator">
        <img src="/images/arrow-circle-down.svg" alt="Arrow down" />
      </div>
    </section>
    <!-- End Stack Component -->

    <!-- Projects Component -- TODO: Make card design-->
    <section class="flex flex-col items-start gap-12 p-28 mx-auto max-w-7xl">
      <article class="flex items-start gap-2 max-w-[37rem]">
        <h3 class="font-semibold text-5xl leading-[3.75rem]">
          The work I do, <br /> and business I help.
        </h3>
      </article>
      <article class="flex items-start gap-8">
        <aside class="flex items-start py-0 gap-20">
          <div
            class="bg-auto w-[512px] h-[656px] bg-no-repeat bg-center bg-adicustom flex flex-col items-start gap-6"
          >
